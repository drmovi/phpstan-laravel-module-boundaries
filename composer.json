{
  "name": "drmovi/phpstan-laravel-module-boundaries",
  "description": "PHPStan extension to enforce Laravel module boundaries and prevent cross-module imports",
  "version": "1.0.0",
  "type": "phpstan-extension",
  "license": "MIT",
  "authors": [
    {
      "name": "drmovi",
      "email": "contact@drmovi.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "phpstan/phpstan": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Drmovi\\PhpstanLaravelModuleBoundaries\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Drmovi\\PhpstanLaravelModuleBoundaries\\Tests\\": "tests/"
    }
  },
  "extra": {
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
